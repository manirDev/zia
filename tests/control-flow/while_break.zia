var a = 1;
tantque (a <= 5) {
    var b = 0;
    tantque (b < 1) {
        var c = 0;
        tantque (c < 1) {
            var d = 0;
            tantque (d < 1) {
                var e = 0;
                tantque (e < 1) {
                    afficher a;
                    quitter;  // break e loop
