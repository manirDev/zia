pour (var a = 1; a <= 5; a++) {
    pour (var b = 0; b < 1; b++) {
        pour (var c = 0; c < 1; c++) {
            pour (var d = 0; d < 1; d++) {
                pour (var e = 0; e < 1; e++) {
                    afficher a;
                    quitter;  // break innermost loop
                }
                quitter; // break d loop
            }
            quitter; // break c loop
        }
        quitter; // break b loop
    }
}
