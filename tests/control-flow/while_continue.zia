var i = 0;
tantque (i < 3) {
    var j = 0;
    tantque (j < 3) {
        si (j == 1) {
            j = j + 1;
            continuer;
        }
        afficher i;
        afficher j;
        j = j + 1;
    }
    i = i + 1;
}

